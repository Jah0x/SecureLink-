# режим аутентификации: internal или proxy
AUTH_MODE=internal

# базовый URL сервиса авторизации (для proxy-режима)
#AUTH_BASE_URL=https://auth.zerologsvpn.com

# эндпоинты апстрима (меняем при необходимости)
AUTH_PATH_REGISTER=/users/register
AUTH_PATH_LOGIN=/users/login
AUTH_PATH_ME=/users/me
AUTH_PATH_LOGOUT=/users/logout

# cookie (httpOnly) для сессии
SESSION_COOKIE_NAME=session_token
SESSION_COOKIE_DOMAIN=.zerologsvpn.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_MAXAGE=2592000

# секрет для подписи JWT сессии
SESSION_SECRET=change_me

# список e-mail администраторов через запятую
#ADMIN_EMAILS=admin@example.com,root@example.com

# если true, первый зарегистрированный пользователь станет администратором
FIRST_USER_ADMIN=false

# строка подключения к БД (postgresql:// или sqlite:///)
DB=postgresql://securelink:password@postgres:5432/securelink?sslmode=disable

# учётка первого администратора (создаётся при пустой таблице users)
FIRST_ADMIN_EMAIL=admin@example.com
FIRST_ADMIN_PASSWORD=change_me

# Frontend config
NEXT_PUBLIC_API_BASE_URL=https://dashboard.zerologsvpn.com
