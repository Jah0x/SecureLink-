# базовый URL сервиса авторизации
AUTH_BASE_URL=https://auth.zerologsvpn.com

# эндпоинты апстрима (меняем при необходимости)
AUTH_PATH_REGISTER=/users/register
AUTH_PATH_LOGIN=/users/login
AUTH_PATH_ME=/users/me
AUTH_PATH_LOGOUT=/users/logout

# cookie (httpOnly) для сессии
SESSION_COOKIE_NAME=session_token
SESSION_COOKIE_DOMAIN=.zerologsvpn.com
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_MAXAGE=2592000

# Frontend config
NEXT_PUBLIC_API_BASE_URL=https://dashboard.zerologsvpn.com
